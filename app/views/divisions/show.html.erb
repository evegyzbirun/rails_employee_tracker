<h1><%= @division.name %></h1>

<% if @division.employees.any? %>
  <h4>Here are the employees that work in this division:</h4>

  <% @division.employees.each do |employee| %>
    <ul>
      <li>
        <%= link_to employee.name, division_employee_path(@division, employee) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>There are no employees in this division.</p>
<% end %>

<p><%= link_to "Add an employee", new_division_employee_path(@division, @employee) %></p>

<p><%= link_to "Edit", edit_division_path(@division) %></p>
<p><%= link_to "Delete Division", division_path(@division),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to divisions", divisions_path %></p>

<p><%= link_to "Return to projects", projects_path %></p>
